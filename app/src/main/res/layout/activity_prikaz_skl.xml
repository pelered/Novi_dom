<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrikazSkl">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <ImageView
            android:id="@+id/edit_mode"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="302dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_mode_edit"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/naziv_skl"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="309dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="@null"
            android:gravity="center"
            android:text="Naziv sklonista" />

        <TextView
            android:id="@+id/adresa_skl"
            android:layout_width="match_parent"
            android:layout_height="36dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="345dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="@null"
            android:gravity="center"
            android:text="Adresa" />

        <TextView
            android:id="@+id/email_sk"
            android:layout_width="338dp"
            android:layout_height="37dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="391dp"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp"
            android:background="@null"
            android:gravity="left"
            android:text="Email" />

        <TextView

            android:id="@+id/opis_skl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="474dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@null"
            android:gravity="start"
            android:hint="Opis"
            android:inputType="textMultiLine" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="297dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="2dp">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider2"
                android:layout_width="match_parent"
                android:layout_height="297dp"


                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true">

            </com.smarteist.autoimageslider.SliderView>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/salji"
            android:layout_width="68dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="338dp"
            android:layout_marginLeft="338dp"
            android:layout_marginTop="388dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:clickable="true"
            android:src="@drawable/ic_envelope" />

        <Button
            android:id="@+id/ispis_zv"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_sk"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="138dp"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            android:text="Ispis ljubimaca" />

        <Button
            android:id="@+id/dodaj"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/salji"
            android:layout_marginStart="-70dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/ispis_zv"
            android:background="@drawable/ic_add_"
            android:visibility="invisible"/>


    </RelativeLayout>

</ScrollView>