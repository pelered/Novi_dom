<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrikazSkl">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="297dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="2dp">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider2"
                android:layout_width="match_parent"
                android:layout_height="297dp"


                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true">

            </com.smarteist.autoimageslider.SliderView>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/edit_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_gravity="right"
            android:src="@drawable/ic_mode_edit"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/naziv_skl"
                android:layout_width="match_parent"
                android:layout_height="30dp"


                android:background="@null"
                android:gravity="center"
                android:text="Naziv sklonista" />

            <Button
                android:id="@+id/dodaj"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-70dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/ic_add_"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/adresa_skl"
            android:layout_width="match_parent"
            android:layout_height="36dp"


            android:background="@null"
            android:gravity="center"
            android:text="Adresa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/email_sk"
                android:layout_width="338dp"
                android:layout_height="37dp"


                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:text="Email" />

            <ImageView
                android:id="@+id/salji"
                android:layout_width="50dp"
                android:layout_height="match_parent"


                android:clickable="true"
                android:src="@drawable/ic_envelope"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/broj_tel_pri"
                android:layout_width="338dp"
                android:layout_height="37dp"
                android:gravity="center"
                android:layout_weight="70"
                android:text="@string/broj_telefona" />

            <ImageButton
                android:id="@+id/zovi_skl"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_phone"
                android:tint="#000000" />
        </LinearLayout>

        <TextView

            android:id="@+id/opis_skl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:gravity="center"
            android:hint="Opis"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/ispis_zv"
            android:layout_width="174dp"
            android:layout_height="wrap_content"

            android:text="Ispis ljubimaca" />


    </LinearLayout>

</ScrollView>